@model MedEd.Models.MedProizvodLjekarna

<hr />
        <form asp-action="Edit" asp-route-page="@ViewBag.Page" method="post">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SifMedProizvod" />
                <input type="hidden" asp-for="SifLjekarna" />
                <div class="col-4">
                    <fieldset disabled="">
                        <input class="form-control" id="disabledInput" type="text" placeholder="@ViewBag.Ime" disabled="">
                    </fieldset>
                </div>
                <div class="col-2">
                    <input asp-for="CijenaMedProizvod" class="form-control" />
                    <span asp-validation-for="CijenaMedProizvod" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <select asp-for="DostupnostMedProizvod" class="form-control">
                        <option value="Dostupan">Dostupan</option>
                        <option value="Nedostupan">Nedostupan</option>
                    </select>
                    <span asp-validation-for="DostupnostMedProizvod" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i></button>
                        <button type="button" id="gumbi" class="btn btn-danger" onclick="closeEditProLjekarnaDivFunc()"><i class="fa fa-window-close"></i></button>
                        <script>
                    function closeEditProLjekarnaDivFunc() {
                        $('#editProLjekarnaDiv').fadeOut();
                        }
                        </script>
                    </div>
                </div>
            </div>
        </form>