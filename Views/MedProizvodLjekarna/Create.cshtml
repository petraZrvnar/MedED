@model MedEd.Models.MedProizvodLjekarna

<hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-4">
                    <select asp-for="SifMedProizvod" class="form-control" asp-items="ViewBag.SifMedProizvod"></select>
                </div>
                <div class="col-2">
                    <input asp-for="CijenaMedProizvod" class="form-control" />
                    <span asp-validation-for="CijenaMedProizvod" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <select asp-for="DostupnostMedProizvod" class="form-control">
                        <option value="Dostupan">Dostupan</option>
                        <option value="Nedostupan">Nedostupan</option>
                    </select>
                    <span asp-validation-for="DostupnostMedProizvod" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i></button>
                        <button type="button" id="gumbi" class="btn btn-danger" onclick="closeNewProLjekarnaFunc()"><i class="fa fa-window-close"></i></button>
                        <script>
                    function closeNewProLjekarnaFunc() {
                        $('#newProLjekarnaDiv').fadeOut();
                    }
                        </script>
                    </div>
                </div>
            </div>
        </form>
